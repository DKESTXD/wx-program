.delete{
  width: 100%; 
  display: flex;
  flex-direction: column;
  background-color: rgb(231, 58, 58);
  border-radius: 50px;
  box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.1);
  margin-top: 10px;
  padding: 10px;
